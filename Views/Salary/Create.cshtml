@model ManagementSystem.Models.tb_salary

@{
    ViewBag.Title = "Create";
}




<style>
    .text-center {
        text-align: center;
    }
</style>

<body>
    <div class="container">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">

                <h6 class="m-0 font-weight-bold text-primary">Tambah Butiran Gaji</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <h6 text-align="center">Sila isi maklumat berikut</h6>
                    <div class=" col-lg-12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-md-10 col-md-1">
                                        <div class="form-group row">
                                            @Html.LabelFor(model => model.TutorID, "No Kad Pengenalan Tutor",htmlAttributes: new { @class = "control-form-label col-md-5" })
                                            <div class="col-md-12">
                                                @Html.DropDownList("TutorID", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TutorID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5 col-md-1">
                                        <div class="form-group row">
                                            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-5" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required" } })
                                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5 col-md-1">
                                        <div class="form-group row">
                                            @Html.LabelFor(model => model.month, htmlAttributes: new { @class = "control-label col-md-5" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.month, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.month, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    @Html.HiddenFor(model => model.Amount)
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-5" })
                                        <div class="col-md-12">
                                            <select id="Status" name="Status" class="form-control">
                                                <option value="">-- Pilih Status --</option>
                                                <option value="Selesai">Selesai</option>
                                                <option value="Tidak Selesai">Tidak Selesai</option>
                                            </select>
                                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="text-center">
                                            <div class="col-md-offset-2 col-md-12">
                                                <input type="submit" value="Simpan" class="btn btn-success " text-align="center" />
                                                @Html.ActionLink("Kembali", "Index", null, new { @class = "btn btn-outline-primary" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>